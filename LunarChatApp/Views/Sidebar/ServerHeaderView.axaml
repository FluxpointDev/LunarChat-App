<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:lucideAvalonia="using:LucideAvalonia"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:shadui="using:ShadUI"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="LunarChatApp.ServerHeaderView">
	<Menu Classes="Single">
		<MenuItem
		Classes="NoPressedAnimation"
		CornerRadius="{DynamicResource LgCornerRadius}"
		HorizontalAlignment="Left"
		shadui:MenuItemAssist.PopupHorizontalOffset="4"
		shadui:MenuItemAssist.PopupPlacement="BottomEdgeAlignedLeft"
		shadui:MenuItemAssist.PopupVerticalOffset="4">
			<MenuItem.Header>
				<Button Padding="6,0,6,0" HorizontalAlignment="Stretch">
					<Grid ColumnSpacing="6">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="100" />
							<ColumnDefinition MinWidth="18" />
						</Grid.ColumnDefinitions>
						<TextBlock Classes="h6" Text="Fluxpoint Development" TextWrapping="WrapWithOverflow"></TextBlock>
						<lucideAvalonia:Lucide Grid.Column="1" HorizontalAlignment="Right" Icon="ChevronDown" StrokeBrush="{DynamicResource PrimaryColor}" StrokeThickness="0.8" Width="16" Height="16"/>
					</Grid>
				</Button>
			</MenuItem.Header>
			<MenuItem Header="Test" Width="140">
				<MenuItem.Icon>
					<lucideAvalonia:Lucide HorizontalAlignment="Left" Icon="Settings" StrokeBrush="{DynamicResource PrimaryColor}" Width="12" Height="12"/>
				</MenuItem.Icon>
			</MenuItem>
			<!--<MenuItem Header="Quit" Command="{Binding QuitCommand}">
			<MenuItem.Icon>
			<lucideAvalonia:Lucide HorizontalAlignment="Left" Icon="X" StrokeBrush="{DynamicResource PrimaryColor}" Width="12" Height="12"/>
			</MenuItem.Icon>
			</MenuItem>-->
		</MenuItem>
	</Menu>
</UserControl>
