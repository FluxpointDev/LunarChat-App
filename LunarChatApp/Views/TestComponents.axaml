<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:avrichtextbox="using:AvRichTextBox"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="using:LiveMarkdown.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LunarChatApp.TestComponents">
  <Grid>
      <Grid.RowDefinitions>
		  <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <StackPanel>
		  <md:MarkdownRenderer x:Name="MarkdownRenderer"/>
          <TextBlock Text="Test" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      </StackPanel>
	  
      <avrichtextbox:RichTextBox x:Name="RichBox" Background="#1E1E1E" Grid.Row="1"></avrichtextbox:RichTextBox>
  </Grid>
</UserControl>
