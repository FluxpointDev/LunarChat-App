<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:shadui="using:ShadUI"
             xmlns:viewmodels="using:LunarChatApp.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="LunarChatApp.SettingsProfile"
			 x:DataType="viewmodels:SettingsSectionModel">
	<StackPanel Spacing="20" HorizontalAlignment="Left">
		<StackPanel HorizontalAlignment="Left" Spacing="10">
		<TextBox
		Classes="Clearable"
		Watermark="builderb"
		Width="225"
		Text="{Binding state.DisplayName}"
		IsReadOnly="true"
		shadui:ControlAssist.Label="Display Name" />

		<TextBox
		Classes="Clearable"
		Watermark="builderb"
		Width="225"
		Text="{Binding state.Username}"
		shadui:ControlAssist.Label="Username" />

		<TextBox
		Classes="Clearable"
		Watermark="user@email.com"
		Width="225"
		Text="user@gmail.com"
		IsReadOnly="true"
		shadui:ControlAssist.Label="Email" />

		
			</StackPanel>
		<StackPanel
		HorizontalAlignment="Left"
		Orientation="Horizontal"
		Spacing="8">
			<Button
		Classes="Primary"
		Content="Change Password" />

			<Button
		Classes="Secondary"
		Content="Disable Account" />

			<Button
		Classes="Destructive"
		Content="Delete Account" />
		</StackPanel>
	</StackPanel>
</UserControl>
